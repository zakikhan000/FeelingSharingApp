<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fill color for the circle background -->
    <solid android:color="#2196F3" />

    <!-- Optional: Add stroke for border effect -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Size of the circle (consistent dimensions for perfect circle) -->
    <size
        android:width="48dp"
        android:height="48dp" />
</shape>